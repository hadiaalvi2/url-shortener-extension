{
  "manifest_version": 3,
  "name": "URL Shortener",
  "version": "1.0",
  "description": "Paste a URL and get a shortened version instantly",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "clipboardWrite",
    "clipboardRead",
    "storage"
  ],
  "host_permissions": [
    "https://cleanuri.com/*",
    "https://tinyurl.com/*"
  ]
}